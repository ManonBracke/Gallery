{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    {% include 'partials/slider.html.twig'%}
    <main class="container">

        <section class="home-gallery mt-5">
            <h3 class="my-5 text-black-50">Quelques tableaux</h3>
            <div class="row">
                {% for painting in paintings%}
                    <div class="col-md-4">
                        <div class="card">
                            <img src="{{ asset('img/painting/' ~ painting.image)}}" alt="{{painting.title}}" style="height: 15rem; ">
                            <div class="card-body">
                                <h4 class="card-title">{{painting.title|capitalize}}</h4>
                                <p class="card-text">{{ painting.createdAt|date('d/m/Y')}} </p>
                                <p class="card-text">{{ painting.category.name|capitalize }}</p>
                                <a href="{{ path('detail', {slug:painting.slug}) }}" class="btn btn-primary">Detail</a>
                            </div>
                        </div>
                    </div>
                {%endfor%}
                <p class="float-end text-center my-3"><small><a href="{{ path('gallery') }}" class="btn btn-secondary">Plus de tableaux</a></small></p>
            </div>
        </section>




        <section class="home-infos mt-5">
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header text-center ">
                            <h5 class="card-title"><i class="icofont-money pr-2"></i> Tarifs</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Adultes : 15€</p>
                            <p class="card-text">Enfants : 7€</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header text-center">
                            <h5 class="card-title"><i class="icofont-clock-time"></i> Horaires</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Du lundi au vendredi</p>
                            <p class="card-text">09:00 - 12:20 | 13:00 - 15:00</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header text-center">
                            <h5 class="card-title"><i class="icofont-info"></i> Informations</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur </p>
                            <p class="card-text">Lorem ipsum dolor sit amet.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>
{% endblock %}
