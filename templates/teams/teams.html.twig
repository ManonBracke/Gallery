{% extends 'base.html.twig' %}

{% block title %}Teams {% endblock %}

{% block body %}

    <div class="container">
        <h2 class="my-5 text-black-50">Teams</h2>
        <div class="row">
            {%for team in teams %}
                <div class="col-md-3 mt-2">
                    <div class="card" style="width: 18rem;">
                        <div class="card-header">
                            <h5>{{ team.role|capitalize }}</h5>
                        </div>
                        <img src="{{asset('img/avatar/' ~ team.image )}}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ team.name|capitalize }}</h5>
                            <p class="card-text">{{ team.description|capitalize }}</p>
                        </div>
                    </div>
                </div>
            {%endfor%}
        </div>
    </div>
{% endblock %}
